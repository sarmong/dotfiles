## APPLICATIONS {{{
super + Return
  $TERMINAL || kitty || alacritty || st

super + control + Return
  $TERMINAL --class centered

{ super + p, Print }
  flameshot gui
## }}}

## LAUNCHERS {{{
super + e
  rofi -show drun # -monitor -1

super + r
  rofi -show window # -monitor -1

super + d
  run_script

super + x
	sessions

super + b
	bookmarks $XDG_NC_DIR/Documents/bookmarks.txt

super + c
	rofi -show calc

super + shift + e
	"$XDG_BIN_DIR"/rofi/power

super + control + c
	CM_LAUNCHER=rofi clipmenu
## }}}

## NOTIFICATIONS {{{
super + period
	dunstctl close-all

super + comma
	dunstctl history-pop

super + slash
	dunstctl action

super + n
	nothis
# ## }}}

## MEDIA {{{
XF86AudioRaiseVolume
	pulsemixer --change-volume +5

XF86AudioLowerVolume
	pulsemixer --change-volume -5

XF86AudioMute
	pulsemixer --toggle-mute

{ XF86AudioPlay, alt + Up }
	playerctl play-pause

alt + Down
	playerctl pause --all-players

{ XF86AudioPrev, alt + Left }
	playerctl previous

{ XF86AudioNext, alt + Right }
	playerctl next
## }}}

## BRIGHTNESS {{{
XF86MonBrightnessUp
	brightnessctl set +10%

XF86MonBrightnessDown
	brightnessctl set 10%-
## }}}

# vim:foldmethod=marker
