# Pulse Audio controls
XF86AudioRaiseVolume
	pulsemixer --change-volume +5

XF86AudioLowerVolume
	pulsemixer --change-volume -5

XF86AudioMute
	pulsemixer --toggle-mute

XF86AudioPlay
	playerctl play-pause

# Sreen brightness controls
XF86MonBrightnessUp
	brightnessctl set +10%

XF86MonBrightnessDown
	brightnessctl set 10%-

super + p
  flameshot gui
