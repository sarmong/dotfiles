super + Return
  $TERMINAL

# @TODO need it?
super + shift + d
  i3-dmenu-desktop

super + e
  rofi -combi-modi window,drun,ssh -show combi -monitor -1

super + d
  run_script

super + b
	bookmarks $XDG_NC_DIR/Documents/bookmarks.txt

super + c
	rofi -show calc

super + shift + e
  rofi -show power-menu -location 1 -yoffset 30 -xoffset 10 -width 15 -columns 1 -lines 6 -modi power-menu:"$XDG_BIN_DIR"/rofi/rofi-power-menu

super + control + c
	CM_LAUNCHER=rofi clipmenu

super + shift + c
	alacritty --working-directory $XDG_DOTFILES_DIR -e $SHELL -c 'nvim ; $SHELL'

super + shift + n
	alacritty --working-directory $XDG_NC_DIR/Vault -e $SHELL -c 'nvim ; $SHELL'

super + period
	dunstctl close-all

super + comma
	dunstctl history-pop

# TODO doesn't work?
super + slash
	dunstctl action

super + n
	nothis

## -- BSPWM Bindings -- ##
# Quit bspwm
super + shift + Escape
  prompt "Are you sure you would like to quit this Xsession" "bspc quit"

# Restart bspwm
super + shift + r
  bspc wm -r

# close and kill
super + q
	prompt "Kill ?" "bspc node -c"

super + shift + q
	bspc node -c

super + shift + control + q
	bspc node -k

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} 'focused:^{1-9,10}'

# Move node to a desktop on another monitor
super + control + {1-9,0}
	bspc node -d 'any.!focused:^{1-9,10}'

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local
super + {w,s}
	bspc desktop -f {prev,next}.local

# go to previous node or desktop. Grave is `
# @TODO use Tab instead of Esc?
super + {grave,Escape}
	bspc {node,desktop} -f last

# Focus the next/previous node in the current desktop
super + {_,shift +}Tab
	bspc node -f {next,prev}.local.!hidden.window

super + o
	bspc monitor -f next

super + shift + o
	bspc node --to-monitor any.!focused

super + u
	bspc node -f any.urgent

# Rotate the tree from the current nodes parent
super + control + {Right, Left}
	bspc node @parent --rotate {90,270}

# Flip the tree from the current nodes parent
super + control + {h,j,k,l}
  bspc node @parent -F {vertical,horizontal,horizontal,vertical}

# Toggle floating on and off
super + f
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

super + shift + f
  bspc node -t \~fullscreen

super + shift + s
  bspc node --flag sticky

# Insert receptacle
super + i; {h,j,k,l}
  bspc node --presel-dir {west,south,north,east} -i

# Balance nodes
super + equal
  bspc node @/ -B

# Expand a window by moving one of its side outward
ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
ctrl + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
super + {Left,Right,Up,Down}
  bspc node -v {-20 0,20 0,0 -20,0 20}

