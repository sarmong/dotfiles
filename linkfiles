#!/bin/sh

Darwin="bash kitty nvim ranger scripts skhd spacebar vim yabai alacritty"

Linux="bash bspwm awesome i3 kitty nvim polybar ranger scripts sxhkd vim alacritty"

if [ "$(uname)" = "Darwin" ]; then
    for dir in ${Darwin}; do
        stow -v --ignore=".DS_Store" "$(basename "$dir")"
    done
elif [ "$(uname)" = "Linux" ]; then
    for dir in ${Linux}; do
        stow -v --ignore=".DS_Store" "$(basename "$dir")"
    done
fi

