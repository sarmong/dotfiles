#!/usr/bin/env bash

from="$1"
to_or_value="$2"
value_or_nil="$2"

from_values="unix date xml yaml yml"

case "$from" in
  "unix")
    case "$to_or_value" in
      "date")
        date -d "@${value_or_nil:0:10}"
        ;;
      *)
        date -d "@${to_or_value:0:10}"
        ;;
    esac
    ;;
  "date")
    case "$to_or_value" in
      "unix")
        date -d "$value_or_nil" "+%s"
        ;;
      *)
        date -d "$to_or_value" "+%s"
        ;;
    esac
    ;;
  "xml")
    case "$to_or_value" in
      "json")
        xq . <"$to_or_value"
        ;;
      *)
        xq . <"$to_or_value"
        ;;
    esac
    ;;
  "yaml" | "yml")
    case "$to_or_value" in
      "json")
        yq . <"$to_or_value"
        ;;
      *)
        yq . <"$to_or_value"
        ;;
    esac
    ;;
  *)
    echo "Unknown convertion type. Allowed values are: $from_values"
    ;;
esac
