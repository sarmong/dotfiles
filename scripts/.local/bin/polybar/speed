#!/bin/sh

speedtest=$(speedtest)

downloadSpeed=$(echo "$speedtest" | grep "Download:" | awk '{print $2}' | cut -d'.' -f1)

error=$(echo "$speedtest" | grep -Eo "Cannot retrieve")
error2=$(echo "$speedtest" | grep -Eo "ERROR")

if [ -n "$error" ] || [ -n "$error2" ]; then
  echo "Err"
else
  echo "$downloadSpeed Mbit/s"
fi
