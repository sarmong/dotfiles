#!/bin/sh

from_bin_folder=$(find "$XDG_BIN_DIR/" -maxdepth 1 -not -type d | xargs -L 1 basename)

tmux_projects="$(ls ~/.config/tmuxinator | xargs basename -s .yml | xargs echo "alacritty --command tmuxinator")"

additional_commands="\nclipctl toggle\n$tmux_projects"

commands_list="$from_bin_folder $additional_commands"

command=$(printf "$commands_list" | dmenu -l 7 -p "Command to run: ")

$command
