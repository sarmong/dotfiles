#!/usr/bin/env bash

commands=(
  bookmark-add
  bookmarks
  copy-spotify-url
  "clipctl toggle"
  dict
  lfh
  "lfh --clip"
  "lfh --ask"
  "file-manager"
  emoji
  fcp
  "fcp --drag"
  mkscript
  mounter
  nothis
  "profile work"
  "profile home"
  restart
  search
  sessions
  testfile
  watch-later.sh
  wifi-menu.sh
)

declare -A other
other["file-manager"]="$TERMINAL --class centered -e $SHELL -c lf"

commands_string=$(printf "%s\n" "${commands[@]}")
command=$(rofi-frecency "scripts" "$commands_string" -l 7 -p "Command to run")

$command || ${other["$command"]}
